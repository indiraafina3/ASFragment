<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <Button
            android:layout_alignParentBottom="true"
            android:onClick="tampilPertama"
            android:text="Fragment 1"
            android:id="@+id/bt_fragment_satu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="tampilKedua"
            android:text="Fragment 2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/bt_fragment_satu"
            android:id="@+id/bt_fragment_dua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentBottom="true"
            android:onClick="tampilKetiga"
            android:text="Fragment 3"
            android:layout_toRightOf="@id/bt_fragment_dua"
            android:id="@+id/bt_fragment_tiga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>